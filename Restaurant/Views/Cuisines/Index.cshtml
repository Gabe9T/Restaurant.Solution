@{
    Layout = "_Layout";
        ViewData["Title"] = "Cuisine Search";
}

@using Restaurant.Models;

@if(@Model.Count == 0)
{
    <h3>No cuisines have been added yet</h3>
}

<ul>
    @foreach(Cuisine cuisine in Model)
    {
        <li>@Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId})</li>
    }
</ul>

<button>@Html.ActionLink("add new cuisine", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
